<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
        <table class='table'>
          <tr><%= image_tag @user.get_profile_image(63,63) %></tr>
          <tr>
        	  <th>name</th>
        	  <th><%= @user.name %></th>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <th><%= @user.introduction %></th>
          </tr>
        </table>

        <div class='row'>
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_57576" href="/users/57576/edit"></a>
        </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url:'/books', method: :post, local:true do |f| %>

        <div class="form-group">
          <label for="book_title">Title</label>
           <%= f.text_field :title %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
            <%= f.text_area :opinion %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
