<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to root_path, class: "navbar-brand" do %>
            <span>bookers</span>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item mr-3">
                  <%= link_to user_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to users_path, class: 'nav-link text-light' do %>
                   <i class="fa-solid fa-user"></i> Users
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to books_path, class: 'nav-link text-light' do %>
                   <i class="fa-solid fa-book-open"></i> Books
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                   <i class="fa-solid fa-right-from-bracket"></i> Log out
                  <% end %>
                </li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item mr-3">
                  <%= link_to root_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to about_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-paperclip"></i> About
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%=link_to new_user_registration_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-user-plus"></i> sign up
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%=link_to new_user_session_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-right-to-bracket"></i> log in
                  <% end %>
                </li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <div class="flash">
         <% if flash[:notice] %>
           <%= flash[:notice] %>
         <% end %>
      </div>
    <%= yield %>
    </main>

    <footer>
      <div class='container mt-5'>
        <div class='row'>
          <div class='mx-auto'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
